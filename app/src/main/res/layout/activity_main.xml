<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:padding="20dp"
    android:orientation="vertical">

    <Button
        android:id="@+id/btn_alert"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Alert Dialog"
        android:backgroundTint="#FF1100"
        android:layout_margin="16dp">

    </Button>
    <Button
        android:id="@+id/btn_custom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Custom Dialog"
        android:backgroundTint="#FF1100"
        android:layout_margin="16dp">
    </Button>
    <Button
        android:id="@+id/btn_fragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Fragment Dialog"
        android:layout_weight="1"
        android:layout_margin="16dp"
        android:backgroundTint="#FF1100">

    </Button>
    <Button
        android:id="@+id/btn_data"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:text="Data Picker Dialog"
        android:layout_margin="16dp"
        android:backgroundTint="#FF1100">
    </Button>
    <Button
        android:id="@+id/btn_time"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Time Picker Dialog"
        android:layout_margin="16dp"
        android:backgroundTint="#FF1100">
    </Button>
    <Button
        android:id="@+id/btn_bottomsheet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="BottomSheet Dialog"
        android:backgroundTint="#FF1100"
        android:layout_margin="16dp"
        android:layout_weight="1">
    </Button>

    <Button
        android:id="@+id/btn_snackbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Snackbar"
        android:backgroundTint="#FF1100"
        android:layout_margin="16dp"
        android:layout_weight="1">
    </Button>
</LinearLayout>